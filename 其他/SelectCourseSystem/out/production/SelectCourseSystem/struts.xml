<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <package name="struts2" extends="struts-default">

        <action name="queryCourseByWord" class="queryCourse">
            <result name="success">/WEB-INF/JSP/showCourse.jsp</result>
        </action>

        <action name="addCourse" class="addCourse">
            <result name="success">/WEB-INF/JSP/addCourseSuccess.jsp</result>
            <result name="failure">/WEB-INF/JSP/addCourseFail.jsp</result>
        </action>
        <action name="addCourseDemo" class="addCourseDemo">
            <result name="success">/WEB-INF/JSP/addCourseDemoSuccess.jsp</result>
            <result name="failure">/WEB-INF/JSP/addCourseDemoFail.jsp</result>
        </action>

        <action name="loginStudent" class="loginStudent">
            <result name="success">/WEB-INF/JSP/loginStudentSuccess.jsp</result>
            <result name="failure">loginStudent.jsp</result>
        </action>
        <action name="showTable" class="showTable">
            <result name="success">/WEB-INF/JSP/showTable.jsp</result>
        </action>

    </package>
</struts>